{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:vue/essential",
        "standard",
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "vue",
        "prettier"
    ],
    "rules": {
        "spaced-comment": "error",
        "semi": ["error", "always"],
        "quotes": ["error", "double"],
        "comma-dangle": ["error", {
            "arrays": "always",
            "objects": "always"
        }]
    },
    "ignorePatterns": ["**/*.spec.js", "src/services/**"]
}